<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.beauvine.digitdots.MainActivity"
    android:background="@drawable/bg3">

    <Space android:id="@+id/dummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn"
        android:background="@drawable/circle_nav"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@+id/logo"
        android:layout_toLeftOf="@+id/dummy"
        android:layout_centerHorizontal="true"
        android:onClick="countDots"
        android:id="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_nav"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="Practice"
        android:id="@+id/button"
        android:onClick="practice"
        android:layout_below="@+id/logo"

        android:layout_toRightOf="@+id/dummy"
        android:layout_toEndOf="@+id/dummy" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition Quiz"
        android:background="@drawable/circle_nav"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_toLeftOf="@+id/dummy"

        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:onClick="add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Digit Dots"
        android:background="@drawable/circle_nav"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/button4"
        android:onClick="about"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/dummy"
        android:layout_toEndOf="@+id/dummy" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:contentDescription="Logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/digitdotslogo" />

</RelativeLayout>
